<div class="row">
    <div class="col">
        <h1 class="text-center">Form tambah data contact</h1>
    </div>
</div>
<div class="row justify-content-center mt-3">
    <div class="col-lg-6">
        <% if (typeof errors != 'undefined') { %>
            <div class="alert alert-danger" role="alert">
                <ul>
                    <% errors.forEach(error => { %>
                        <li>
                            <%= error.msg %>
                        </li>
                        <% }) %>
                </ul>
            </div>
            <% } %>

                <form action="/contact?_method=PUT" method="post">
                    <input type="hidden" name="_id" value="<%= contact._id %>">
                    <input type="hidden" name="namaLama" value="<%= (contact.namaLama) ? contact.namaLama : contact.nama%>">
                    <div class="mb-3">
                        <label for="nama" class="form-label">Nama</label>
                        <input type="text" class="form-control" name="nama" id="nama" placeholder="Nama" value="<%= contact.nama %>">
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" name="email" id="email" placeholder="email" value="<%= contact.email %>">
                        <!-- <small id="helpId" class="form-text text-muted">Help text</small> -->
                    </div>
                    <div class="mb-3">
                        <label for="nohp" class="form-label">No HP</label>
                        <input type="text" class="form-control" name="nohp" id="nohp" placeholder="nohp" value="<%= contact.nohp %>">
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-dark">Ubah</button>
                        <a class="btn btn-secondary" href="/contact">Kembali</a>
                    </div>
                </form>
    </div>
</div>